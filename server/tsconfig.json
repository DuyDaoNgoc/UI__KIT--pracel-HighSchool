{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "./",
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["*.ts", "utils/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
