{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",

    "baseUrl": ".",

    "paths": {
      "@/*": ["node_modules/*"],
      "@/*": ["src/*"],
      "@server/*": ["server/*"]
    },

    "typeRoots": ["./node_modules/@types", "./src/types"],

    "skipLibCheck": true,

    "lib": ["esnext", "dom"]
  },

  "include": ["src", "src/types", "server/serviceWorker.ts"],
  "exclude": ["node_modules/react-native", "node_modules/@types/react-native"]
}
