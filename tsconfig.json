{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@server/*": ["../server/*"],
      "@/*": ["*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/types"],

    /* ✅ Thêm dòng này để ngăn lỗi trùng định nghĩa (react-native vs web) */
    "skipLibCheck": true,

    /* ✅ Khai báo lib phù hợp cho web */
    "lib": ["esnext", "dom"]
  },
  "include": ["src", "src/types", "server/serviceWorker.ts"],
  "exclude": ["node_modules/react-native", "node_modules/@types/react-native"]
}
